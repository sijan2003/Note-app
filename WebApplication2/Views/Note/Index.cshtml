@model IEnumerable<YourNotes.viewmodel.NoteViewModel>

@{
    ViewData["Title"] = "YourNotes - Notes";
}

<style>
    body {
        background: linear-gradient(135deg, #ff7eb3, #ff758c, #ff6a88, #ff5252);
        font-family: 'Arial', sans-serif;
        color: white;
        margin: 0;
        height: 100vh;
        overflow: hidden;
    }

    .main-content {
        display: flex;
        flex-direction: column;
        justify-content: flex-start; /* Align content to the top */
        align-items: flex-end; /* Align to the right */
        height: 100%;
        padding: 20px;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .add-button {
        background-color: #ff5252;
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 25px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(255, 82, 82, 0.5);
        text-decoration: none;
        margin: 20px 20px 0 0; /* Adjust margin for spacing */
    }
        .add-button:hover {
            background-color: #ff758c;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(255, 82, 82, 0.7);
        }

    .note-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px 0;
        width: 100%;
        justify-content: flex-end;
        align-items: flex-start;
    }

    .note-card {
        max-width: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
        padding: 20px;
        color: #333;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .note-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.3);
        }

        .note-card h3 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #ff5252;
        }

        .note-card p {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: #333;
        }

        .note-card .actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .note-card a, .note-card form button {
            background-color: #ff5252;
            color: white;
            padding: 10px 25px;
            border: none;
            border-radius: 25px;
            font-size: 1.2rem;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .note-card a:hover, .note-card form button:hover {
                background-color: #ff758c;
                transform: translateY(-2px);
            }

    .no-notes-message {
        color: white;
        font-size: 1.2rem;
        margin: 20px 0;
        text-align: center;
        width: 100%;
    }

    .text-danger {
        color: #ff5252;
    }
</style>

<div class="main-content">
    <a href="@Url.Action("NewNote", "Note")" class="add-button">Add New Note</a>

    @if (Model == null || !Model.Any())
    {
        <p class="no-notes-message">No notes found. Add a new note to get started!</p>
    }
    else
    {
        <div class="note-grid">
            @foreach (var note in Model)
            {
                <div class="note-card" style="background-color: @note.Color;">
                    <h3>@note.Title</h3>
                    <p>@note.Description</p>
                    <div class="actions">
                        <a href="@Url.Action("Edit", "Note", new { id = note.Id })">Edit</a>
                        <form asp-action="Delete" asp-route-id="@note.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this note?');">
                            <button type="submit" class="delete-button">Delete</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}