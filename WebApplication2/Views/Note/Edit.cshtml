@model YourNotes.viewmodel.NoteViewModel

@{
    ViewData["Title"] = "Edit Note";
}

<style>
    body {
        background: linear-gradient(135deg, #ff7eb3, #ff758c, #ff6a88, #ff5252);
        font-family: 'Arial', sans-serif;
        color: white;
        margin: 0;
        height: 100vh;
        overflow: hidden;
    }

    .edit-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
    }

    .edit-form {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
        padding: 20px;
        width: 100%;
        max-width: 500px;
        color: #333;
    }

        .edit-form h2 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
            color: #ff5252;
            text-align: center;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-size: 1.2rem;
            margin-bottom: 5px;
            color: #ff5252;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ff5252;
            border-radius: 5px;
            font-size: 1rem;
            background: rgba(255, 255, 255, 0.8);
            color: #333;
        }

        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }

    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

        .form-actions button {
            background-color: #ff5252;
            color: white;
            padding: 10px 25px;
            border: none;
            border-radius: 25px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .form-actions button:hover {
                background-color: #ff758c;
                transform: translateY(-2px);
            }

    .text-danger {
        color: #ff5252;
    }
</style>

<div class="edit-container">
    <div class="edit-form">
        <h2>Edit Note</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" /> <!-- Hidden field for note ID -->

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color"></label>
                <input asp-for="Color" type="color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">Save</button>
                <a href="@Url.Action("Index")" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}