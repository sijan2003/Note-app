@model YourNotes.viewmodel.NoteViewModel

@{
    ViewData["Title"] = "Create a Note";
}

<style>
    body {
        background: linear-gradient(135deg, #ff7eb3, #ff758c, #ff6a88, #ff5252); /* Fallback gradient */
        font-family: 'Arial', sans-serif;
        color: white;
        margin: 0;
        height: 100vh;
        overflow: hidden;
    }

    header {
        background-color: transparent;
    }

    .main-content {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        padding: 20px;
    }

    .note-container {
        max-width: 700px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
        padding: 20px;
        position: relative;
        overflow: hidden;
        transition: background-color 0.3s ease; /* Smooth color change */
    }

    .note-header {
        background: rgba(255, 255, 255, 0.1);
        padding: 10px 15px;
        border-radius: 10px 10px 0 0;
        margin: -20px -20px 20px;
    }

    .note-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333; /* Dark text for better visibility */
        outline: none;
        width: 100%;
        background: rgba(255, 255, 255, 0.9); /* Light background */
        padding: 0.75rem;
        border-radius: 5px;
    }

    .note-content {
        font-size: 1.3rem;
        color: #333; /* Dark text for better visibility */
        min-height: 300px;
        padding: 15px;
        outline: none;
        width: 100%;
        background: rgba(255, 255, 255, 0.9); /* Light background */
        border-radius: 5px;
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .note-footer {
        margin-top: 20px;
        text-align: right;
        background: rgba(255, 255, 255, 0.1);
        padding: 10px;
        border-radius: 0 0 10px 10px;
        margin: 20px -20px -20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .save-btn {
        background-color: #ff5252;
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 25px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(255, 82, 82, 0.5);
    }

        .save-btn:hover {
            background-color: #ff758c;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(255, 82, 82, 0.7);
        }

    .color-picker {
        padding: 5px;
        border-radius: 5px;
        background: rgba(255, 255, 255, 0.9);
        border: none;
        cursor: pointer;
    }

    .note-container {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="main-content">
    <div class="note-container" style="background-color: @Model.Color;">
        <form asp-action="Create" method="post">
            <div class="note-header">
                <input asp-for="Title" class="note-title" placeholder="Your Note Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <textarea asp-for="Description" class="note-content" placeholder="Your Thoughts Here..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="note-footer">
                <input asp-for="Color" type="color" class="color-picker" />
                <button type="submit" class="save-btn">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}-