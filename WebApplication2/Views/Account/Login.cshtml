@model WebApplication2.viewmodel.Login

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Apply background to the entire page, excluding the navbar */
    body {
        background: linear-gradient(135deg, #ff7eb3, #ff758c, #ff6a88, #ff5252); /* Vibrant gradient */
        font-family: 'Arial', sans-serif;
        color: white;
        margin: 0;
        height: 100vh; /* Full height of the viewport */
    }

    header {
        background-color: transparent; /* Make the navbar transparent */
    }

    .main-content {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        height: 100%; /* Take up the remaining space after navbar */
        padding: 20px;
    }

    .container {
        max-width: 500px; /* Reduced from 600px to make it smaller */
        padding: 15px; /* Reduced from 20px for a tighter fit */
        background: rgba(255, 255, 255, 0.1); /* Slight transparency for contrast */
        border-radius: 10px; /* Rounded corners for the form */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
    }

    h1 {
        font-size: 2.5rem; /* Slightly smaller than home page to fit form better */
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .form-group {
        margin-bottom: 1.5rem;
        text-align: left; /* Align form labels and inputs to the left */
    }

    label {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        display: block; /* Ensure labels are on their own line */
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 0.75rem;
        border: none;
        border-radius: 5px;
        background: rgba(255, 255, 255, 0.9); /* Light background for inputs */
        color: #333; /* Dark text for readability */
        font-size: 1rem;
    }

    .text-danger {
        color: #ff5252; /* Match the gradient's end color for errors */
    }

    button[type="submit"] {
        background-color: #ff5252; /* Match the gradient's end color */
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button[type="submit"]:hover {
            background-color: #ff758c; /* Lighter shade from gradient */
        }

    .remember-me {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
    }

        .remember-me input {
            margin-right: 0.5rem;
        }
</style>

<div class="main-content">
    <div class="container">
        <h1>Login</h1>
        <p>Welcome! Please log in to continue.</p>

        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="remember-me">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"></label>
            </div>

            <button type="submit" class="btn">Login</button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}